<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
 
<body class="bg-light">
      <%- include('_navbar') %>
  <div class="container py-4">
    <div class="container py-4">
  <h2 class="mb-4">Add New Post!</h2>
  <% if (error) { %> <% error = error.split(',') %> <% error.forEach(err =>
      { %>

      <p style="color: red"><%= err %></p>
      <% }); %> <% } %>

  <form action="/post" method="POST">
    <div class="mb-3">
      <label for="title" class="form-label">Judul</label>
      <input type="text" name="title" id="title" class="form-control">
    </div>
    <div class="mb-3">
      <label for="content" class="form-label">Konten</label>
      <textarea name="content" id="content" rows="3" class="form-control"></textarea>
    </div>
    <div class="mb-3">
      <label for="imgUrl" class="form-label">Gambar (URL)</label>
      <input type="text" name="imgUrl" id="imgUrl" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Posting</button>
  </form>

  <hr class="my-5">



    <% post.forEach(el => { %>
      <div class="card mb-4 shadow-sm">
        <div class="card-body">
          <h5 class="card-title"><%= el.title %></h5>
          <p class="card-text"><%= el.content %></p>
          

          <% if (el.imgUrl) { %>
            <img src="<%= el.imgUrl %>" class="img-fluid rounded mb-3" alt="Post image">
          <% } %>

          <% if (el.Post_Tags && el.Post_Tags.length > 0) { %>
  <div class="mt-3">
    <strong>Tags:</strong>
    <% el.Post_Tags.forEach(pt => { %>
      <span class="badge bg-secondary"><%= pt.Tag.name %></span>
    <% }) %>
  </div>
<% } %>


          <div class="d-flex justify-content-between align-items-center border-top pt-2">
            <span>üëç <%= el.like %> Likes</span>
            <div>
                <form action="/post/<%= el.id %>/delete" method="POST" class="d-inline">
      <button class="btn btn-sm btn-danger">Delete</button>
    </form>
              <form action="/post/<%= el.id %>/like" method="post" class="d-inline">
  <button class="btn btn-sm btn-outline-primary me-2">Like</button>
</form>

              <button class="btn btn-sm btn-outline-secondary">Comment</button>
            </div>
          </div>
          
        </div>
      </div>
    <% }) %>
  </div>

</body>
</html>

    <%- include('_linkbs') %>
  </body>
</html>
